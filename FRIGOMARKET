                                                                                                                                                                                                                                                                                                                                                        <script>
                                                                                                                                                                                                                                                                                                                                                                document.getElementById('pedidoForm').addEventListener('submit', function(event) {
                                                                                                                                                                                                                                                                                                                                                                                event.preventDefault(); // Evita el envío normal del formulario
                                                                                                                                                                                                                                                                                                                                                                                            
                                                                                                                                                                                                                                                                                                                                                                                                        // Obtener valores del formulario
                                                                                                                                                                                                                                                                                                                                                                                                                    const nombre = document.getElementById('nombre').value;
                                                                                                                                                                                                                                                                                                                                                                                                                                const apellido = document.getElementById('apellido').value;
                                                                                                                                                                                                                                                                                                                                                                                                                                            const descripcion = document.getElementById('descripcion').value;
                                                                                                                                                                                                                                                                                                                                                                                                                                                        const direccion = document.getElementById('direccion').value;
                                                                                                                                                                                                                                                                                                                                                                                                                                                                    
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                // Crear mensaje para WhatsApp
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                            const mensaje = `Nuevo pedido de FRIGOMARKET:\nNombre: ${nombre} ${apellido}\nDescripción: ${descripcion}\nDirección: ${direccion}\nServicio contra entrega.`;
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                        
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                    // Codificar el mensaje para URL
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                const mensajeCodificado = encodeURIComponent(mensaje);
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                            
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                        // Número de WhatsApp (sin +593, solo el número local)
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                    const numero = '593959024344'; // Agrega el prefijo internacional de Ecuador
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                            // URL de WhatsApp
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                        const urlWhatsApp = `https://wa.me/${numero}?text=${mensajeCodificado}`;
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                    
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                // Abrir WhatsApp
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                            window.open(urlWhatsApp, '_blank');
                                                                                                                                                                                                                                                                                                                                                                });
                                                                                                                                                                                                                                                                                                                                                                    </script>
                                                                                                                                                                                                                                                                                                                                                                    </body>
                                                                                                                                                                                                                                                                                                                                                                    </html>
                                                                                                                                                                                                                                                                                                                                                                })
                                                                                        }
                                                                                }
                                                                        }
                                                                }
                                                        }
